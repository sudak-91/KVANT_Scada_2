<Window x:Class="KVANT_Scada_2.GUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KVANT_Scada_2.GUI"
        mc:Ignorable="d"
        Title="Login" Width="300" Height="200">
    <Grid>
        <TextBox x:Name="Username" HorizontalAlignment="Left" Height="20" Margin="108,35,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="170"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="25,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Height="20" Margin="109,70,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="170" MaxLength="8" IsUndoEnabled="True"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="25,67,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Signin" Content="Войти" HorizontalAlignment="Left" Height="26" Margin="55,116,0,0" VerticalAlignment="Top" Width="70"/>
        <Button x:Name="Exit" Content="Выйти" HorizontalAlignment="Left" Height="26" Margin="145,116,0,0" VerticalAlignment="Top" Width="70"/>

    </Grid>
</Window>
